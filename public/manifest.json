{
  "manifest_version": 2,
  "name": "Tolon",
  "version": "0.5.0",
  "description": "Find webpage discussions on Hacker News and Reddit.",
  "homepage_url": "https://github.com/rwanyoike/tolon-browser-extension",
  "icons": {
    "64": "images/icon.png",
    "128": "images/icon@2x.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
