{
  "manifest_version": 3,
  "name": "Tolon Browser Extension",
  "version": "0.6.0",
  "description": "Find webpage discussions on the web.",
  "homepage_url": "https://github.com/rwanyoike/tolon-browser-extension",
  "icons": {
    "64": "images/icon.png",
    "128": "images/icon@2x.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ]
}
